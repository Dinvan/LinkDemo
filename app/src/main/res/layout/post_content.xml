<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/quick_edit_large_shadow"
    android:orientation="vertical" >



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/empty"
        android:src="@drawable/dotted" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="3" >

        <ImageView
            android:id="@+id/image_post"
            android:layout_width="0dip"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher"
            android:contentDescription="@string/empty"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/info_wrap"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="Title"
                android:maxLines="2"
                android:textColor="@color/text_title_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:visibility="visible"
                android:maxLines="1"
                android:text="helok kjlkj afaklfjs fsklfjasklfasfasf "
                android:textSize="16sp" />
            <TextView
                android:id="@+id/url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="http://www.abc.com"
                android:maxLines="1"
                android:textColor="@color/soft_grey_choose"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/post_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/aa"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="www.thinkitloud"
        android:textSize="15sp" />
</LinearLayout>